^driftfile /var/lib/chrony/drift$
^rtcsync$
^keyfile /etc/chrony.keys$
^leapsecmode slew$
^makestep 0.1 3$
^maxslewrate 1000$
^allow 127.0.0.1$
^deny 192.168.1.0/24$
^pool pool.ntp.org\s+maxsources 6\s+iburst $
^server ntp.date.org\s+iburst trust $
^server ntp2.date.org $
^smoothtime 400 0.001 leaponly$
