[%- FOREACH pair IN CCM.contents.pairs %]
[%     pair.key FILTER upper %]=[%- -%]
[%-    IF CCM.is_scalar(pair.value) -%]
[%-        IF pair.value.is_boolean -%]
[%             pair.value ? "1" : "0" %]
[%-        ELSE -%]
[%             pair.value %]
[%-        END -%]
[%-    ELSIF CCM.is_list(pair.value) -%]
'[%       pair.value.join(' ') %]'
[%-    END -%]
[%- END -%]
